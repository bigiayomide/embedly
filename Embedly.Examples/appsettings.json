{
  "Application": {
    "Name": "Embedly SDK Examples",
    "Version": "1.0.0",
    "Environment": "Development",
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "DefaultTimeout": "00:02:00",
    "EnableDetailedErrors": true,
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3001"
    ]
  },
  "Embedly": {
    "ApiKey": "",
    // Set via user secrets: dotnet user-secrets set "Embedly:ApiKey" "BSK-your-key"
    "OrganizationId": "",
    // Set via user secrets: dotnet user-secrets set "Embedly:OrganizationId" "your-org-id"
    "Environment": "Staging",
    "BaseUrl": "",
    "Timeout": "00:02:00",
    "EnableLogging": true,
    "LogRequestBodies": false,
    "WebhookSecret": "",
    // Set via user secrets: dotnet user-secrets set "Embedly:WebhookSecret" "your-webhook-secret"
    "MaxRetryAttempts": 3,
    "RetryDelay": "00:00:01"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 104857600,
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithProcessId"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "UseFastEndpoints": false,
  // Set to true to use FastEndpoints instead of Controllers
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001"
      }
    }
  }
}